<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitleTextColor="@color/white"
        app:titleTextColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCHEDULE NAME" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBarCountry"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="30dp" />

            <EditText
                android:id="@+id/etCountry"
                style="@style/EditTextRobotoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:drawableRight="@drawable/ic_down"

                android:focusable="false"
                android:hint="Select name"
                android:inputType="text" />

        </FrameLayout>


        <TextView
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REQUEST SUBJECT" />


        <EditText
            android:id="@+id/etSubject"
            style="@style/EditTextRobotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="3"
            android:focusableInTouchMode="true"
            android:hint="Enter Subject"
            android:nextFocusForward="@+id/etPassword" />

        <TextView
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REQUEST DESCRIPTION" />


        <EditText
            android:id="@+id/etDescription"
            style="@style/EditTextRobotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minLines="2"
            android:maxLines="5"
            android:hint="Enter Description Here"
            android:nextFocusForward="@+id/etPassword" />

        <TextView
            android:id="@+id/tvSendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/rectangle_red"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="SEND REQUEST"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>